Bootstrap: docker
From: ubuntu:22.04

%post

    apt-get update
    echo 'Y' | apt install wget

    # install miniconda
    wget https://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh
    bash Miniconda3-latest-Linux-x86_64.sh -b -f -p /miniconda3/
    rm Miniconda3-latest-Linux-x86_64.sh

    export PATH="/miniconda3/bin:$PATH"

    # conda installs:

    conda install -c conda-forge python=3.10.2 mamba=1.5.8
    mamba install -c bioconda -c conda-forge -c anaconda -y samtools=1.13 bedtools=2.29.2 r-tidyverse bioconductor-iranges=2.28 novoalign=3.09.00

%environment
    export PATH="/miniconda3/bin:$PATH"

